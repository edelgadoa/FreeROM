Mat[int] SmagoPEM(Mbases);
{
	for (int s=0; s<Mbases; s++){
		// Mat SmagoPEMs;//
		macro def(i) [i, i#Y] //
		macro init(i) [i, i] // EOM
		MatCreate(Th, SmagoPEM[s], Pk2P2);
		// Matrices Smago
		varf SmagoPE([uu,uuY],[v,vY]) = int2d(Th)((CS*hTriangle)^2*EIMSmago[s]*UporV(uu,v));
		matrix SmagoPEMT = SmagoPE(Vh2P1dcper, Vh2P1dcper);
		// SmagoPEMs = SmagoPE(Vh2P2perL, Vh2P2perL);
		
		matrix DXX, DYY;
		{
			matrix Maux; 
			//COMPONENTE X 
			Maux = DX2P2*IPh2P22P1;
			DXX = (Maux')*SmagoPEMT;
			DXX = DXX*Maux;
		
			Maux = DY2P2*IPh2P22P1;
			DYY = (Maux')*SmagoPEMT;
			DYY = DYY*Maux;
		
		}
		matrix SmagoPEMTxy = DXX + DYY;	
		SmagoPEM[s] = SmagoPEMTxy;
	}
}